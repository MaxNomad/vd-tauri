{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "VD Control Alpha",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "http": {
        "all": true, 
        "request": true,
        "scope": ["https://api.vd.lutsk.ua/api/*", "http://localhost:8080/*", "https://api.vd.lutsk.ua/app/*"]
      }, 
      "window": {
        "all": true,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.vd",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "windows": {
        "installMode": "quiet"
      },
      "active": true,
      "endpoints": [
        "https://api.vd.lutsk.ua/app/update?current_version={{current_version}}&target={{target}}&arch={{arch}}"
        ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERCM0ZDMzBEMzQ1RTJCMEYKUldRUEsxNDBEY00vMitzV3RvTGh2K0dYMk8zOS9jSVA4bnRDU3VwcXpHMng5R1RtSHFzU0UzRGoK"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "VD Control Alpha",
        "width": 1280,
        "height": 720,
        "minWidth": 1280,
        "minHeight": 720,
        "center": true,
        "visible": false,
        "decorations": false
      },
      {
         "width": 450,
         "height": 300,
         "decorations": false,
         "center": true,
         "transparent": true,
         "skipTaskbar": true,
         "alwaysOnTop": true,
         "resizable": false,
         "url": "splashscreen.html",
         "label": "splashscreen"
        }
    ]
  }
}
